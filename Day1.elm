module Day1 where

import Html exposing (h1, h2, div, p, text)
import String

finalFloor : List Int -> String
finalFloor instructions =
  instructions
    |> List.foldr (+) 0
    |> toString

firstEntersBasement : List Int -> Int -> Int -> Int
firstEntersBasement instructions currentLvl instructionsSeen =
  if currentLvl == -1 then
    instructionsSeen
  else
    case instructions of
      [] ->
        instructionsSeen
      head :: rest ->
        -- recur
        firstEntersBasement rest (head + currentLvl) (instructionsSeen + 1)
    

main : Html.Html
main = 
  let
    instructions = 
      input
        |> String.toList
        |> List.map (\n -> if n == '(' then 1 else -1)
    part1 = finalFloor instructions
    part2 = firstEntersBasement instructions 0 0
  in
    div [] 
      [ h1 [] [ text "Day 1" ]
      , h2 [] [ text "Part 1" ]
      , p [] [ text part1 ]
      , h2 [] [ text "Part 2" ]
      , p [] [ text (toString part2) ]
      ]


